# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# DeepSeek API Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_URL=https://api.deepseek.com/v1
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./gitinsky_bot.db

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@company.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_EMAIL=your_email@company.com
SMTP_FROM_NAME=Gitinsky Support Bot

# Company Email Domain (for verification)
COMPANY_EMAIL_DOMAIN=company.com

# Verification Settings
VERIFICATION_CODE_TTL=15
SESSION_TTL_DAYS=30

# Performance Settings
MAX_CONCURRENT_USERS=100
MAX_RESPONSE_TOKENS=2000
API_TIMEOUT_SECONDS=30

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_FEEDBACK_COLLECTION=true
ENABLE_ADMIN_COMMANDS=true
ENABLE_RESPONSE_STREAMING=false

# Logging
LOG_LEVEL=INFO

# Admin Configuration
ADMIN_TELEGRAM_IDS=123456789,987654321
